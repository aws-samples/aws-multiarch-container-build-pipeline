{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "indent": ["error", 2],
        "no-new": "off"
    },
    "ignorePatterns": ["**/*.d.ts", "**/*.js"]
}
